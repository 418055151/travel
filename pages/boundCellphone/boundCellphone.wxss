.travel-main-part {
    margin: 0 60rpx;
    padding-top: 80rpx;
}

.travel-problem-account {
    display: block;
    overflow: hidden;
    margin-bottom: 10rpx;
    position: relative;
}

.travel-input-container {
    border-bottom: 1px solid #e2e2e2;
    display: flex;
}

.travel-input-container text.fL {
    font-size: 28rpx;
    line-height: 68rpx;
    width: 160rpx;
    text-align: left;
    color: #333;
    font-weight: bold;
    vertical-align: middle;
}

.travel-main-part input {
    position: relative;
    border: none;
    border-radius: 0;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    -webkit-appearance: none;
    z-index: 10;
    background: transparent;
    color: #999;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    zoom: 1;
    font-size: 28rpx;
    height: 68rpx;
}

.travel-problem-account .travel-prompt {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 28rpx;
    color: red;
    visibility: hidden;
}

.travel-problem-account .travel-send-verification {
    font-size: 24rpx;
    color: white;
    border-radius: 40rpx;
    background-color: #3bc983;
    height: 52rpx;
    width: 160rpx;
    text-align: center;
    line-height: 52rpx;
    display: block;
    margin-top: 8rpx;
}

.travel-problem-account view.disabled {
    background-color: #eaeaea;
    color: #333;
    transform: all 0.4s;
}

.travel-button {
    margin: 110rpx auto 0;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    text-align: center;
}

.travel-button button {
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    position: relative;
    zoom: 1.1;
    display: block;
    background: #3bc983;
    border-radius: 50rpx;
    color: white;
    line-height: 64rpx;
    font-size: 28rpx;
    transition: all 0.45s;
}
