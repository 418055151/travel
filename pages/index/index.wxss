page {
    background: #fff;
}

.nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    border-bottom: 2rpx solid #ddd;
    z-index: 999;
    background-color: white;
    white-space: nowrap;
    overflow: hidden;
    box-sizing: border-box;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
}

.nav view {
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    margin: 0 10rpx;
    height: 88rpx;
    line-height: 88rpx;
    display: inline-block;
    font-size: 26rpx;
    padding: 0 38rpx;
}

.nav view.active {
    border-bottom: 4rpx solid #3bc983;
    color: #3bc983;
    font-weight: bold;
}

.coursecontainer {
    width: 100%;
    display: block;
    margin-top: 80rpx;
    font-size: 0;
}

.activity {
    width: 100%;
    height: auto;
    overflow-x: hidden;
    overflow-y: auto;
}

.activity .item-list {
    position: relative;
    margin-top: 10rpx;
    background: white;
}


.activity-img {
    overflow: hidden;
    position: relative;
    width: 100%;
    height: 380rpx;
}

.activity-img image {
    display: block;
    width: 100%;
    height: 100%;
}

.activity-label {
    position: absolute;
    top: 10rpx;
    right: 20rpx;
}

.activity-label view {
    background-color: rgba(0, 0, 0, 0.4);
    color: white;
    font-size: 28rpx;
    border-left: 4rpx solid #ffa903;
    padding: 0 18rpx;
    margin-bottom: 18rpx;
    line-height: 36rpx;
}

.activity-introduce {
    display: flex;
    padding: 6px 11px;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    text-align: center;
}

.activity-describe {
    -webkit-box-flex: 3;
    -ms-flex: 3;
    flex: 3;
    text-align: left;
}

.activity-describe .activity-name {
    margin-bottom: 8px;
    font-size: 14px;
    color: #333;
    line-height: 22px;
    padding-right: 22px;
    margin-top: 5px;
    text-overflow: ellipsis;
    cursor: auto;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.activity-describe text {
    display: inline-block;
    color: #3bc983;
    border: 1px solid #3bc983;
    padding: 0 4px;
    margin-right: 2px;
    border-radius: 5px;
    font-size: 12px;
    margin-bottom: 5px;
}

.activity-describe text.handpick {
    color: #ffa903;
    border: 1px solid #ffa903;
}

.activity-price {
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    text-align: right;
}

.activity-price .price {
    color: #999;
    font-size: 13px;
}

.activity-price .price .unit-price {
    font-size: 16px;
    font-weight: bold;
    color: #3bc983;
    padding-right: 5px;
}
.empty-btn{
    font-size: 28rpx;
}